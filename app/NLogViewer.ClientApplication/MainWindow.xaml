<Window x:Class="NLogViewer.ClientApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dj="clr-namespace:DJ;assembly=NLogViewer"
        mc:Ignorable="d" 
        Title="NLogViewer Client Application" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open File..." 
                          Command="{Binding OpenFileCommand}" 
                          InputGestureText="Ctrl+O"/>
                <Separator />
                <MenuItem Header="E_xit" 
                          Command="{Binding ExitCommand}" 
                          InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Settings..." 
                          Command="{Binding OpenSettingsCommand}" 
                          InputGestureText="Ctrl+,"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About..." 
                          Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>
        
        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Margin="0,25,0,0">
            <Button Content="Start Listening" 
                    Command="{Binding StartListeningCommand}" 
                    ToolTip="Start listening on configured ports"/>
            <Button Content="Stop Listening" 
                    Command="{Binding StopListeningCommand}" 
                    ToolTip="Stop listening on all ports"/>
            <Separator />
            <TextBlock Text="Status:" VerticalAlignment="Center" Margin="5,0"/>
            <TextBlock Text="{Binding ListeningStatus}" 
                       VerticalAlignment="Center" 
                       Margin="5,0"
                       FontWeight="Bold"/>
        </ToolBar>
        
        <!-- Main Content: TabControl with NLogViewers -->
        <TabControl x:Name="LogTabsControl" 
                    Grid.Row="1" 
                    ItemsSource="{Binding LogTabs}"
                    SelectedItem="{Binding SelectedTab}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Header}" />
                        <TextBlock Text=" (" 
                                   Margin="2,0,0,0"/>
                        <TextBlock Text="{Binding LogCount}" 
                                   FontWeight="Bold"/>
                        <TextBlock Text=")" />
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <dj:NLogViewer TargetName="{Binding TargetName}" 
                                   MaxCount="{Binding MaxCount}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding LastLogTimestamp}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>


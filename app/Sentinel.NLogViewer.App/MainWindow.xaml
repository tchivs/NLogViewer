<Window x:Class="Sentinel.NLogViewer.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dj="clr-namespace:Sentinel.NLogViewer.Wpf;assembly=Sentinel.NLogViewer.Wpf"
        xmlns:viewModels="clr-namespace:Sentinel.NLogViewer.App.ViewModels"
        xmlns:helpers="clr-namespace:Sentinel.NLogViewer.App.Helpers"
        mc:Ignorable="d" 
        Title="NLogViewer Client Application" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="{helpers:Resource Key=Menu_File, DefaultValue=_File}">
                <MenuItem Header="{helpers:Resource Key=Menu_OpenFile, DefaultValue=_Open File...}" 
                          Command="{Binding OpenFileCommand}" 
                          InputGestureText="Ctrl+O"/>
                <Separator />
                <MenuItem Header="{helpers:Resource Key=Menu_Exit, DefaultValue=E_xit}" 
                          Command="{Binding ExitCommand}" 
                          InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="{helpers:Resource Key=Menu_View, DefaultValue=_View}">
                <MenuItem Header="{helpers:Resource Key=Menu_Settings, DefaultValue=_Settings...}" 
                          Command="{Binding OpenSettingsCommand}" 
                          InputGestureText="Ctrl+,"/>
            </MenuItem>
            <MenuItem Header="{helpers:Resource Key=Menu_Help, DefaultValue=_Help}">
                <MenuItem Header="{helpers:Resource Key=Menu_About, DefaultValue=_About...}" 
                          Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>
        
        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Margin="0,25,0,0">
            <Button Content="{helpers:Resource Key=Button_StartListening, DefaultValue=Start Listening}" 
                    Command="{Binding StartListeningCommand}" 
                    ToolTip="{helpers:Resource Key=ToolTip_StartListening, DefaultValue=Start listening on configured ports}"/>
            <Button Content="{helpers:Resource Key=Button_StopListening, DefaultValue=Stop Listening}" 
                    Command="{Binding StopListeningCommand}" 
                    ToolTip="{helpers:Resource Key=ToolTip_StopListening, DefaultValue=Stop listening on all ports}"/>
            <Separator />
            <TextBlock Text="{helpers:Resource Key=Status_Label, DefaultValue=Status:}" VerticalAlignment="Center" Margin="5,0"/>
            <TextBlock Text="{Binding ListeningStatus}" 
                       VerticalAlignment="Center" 
                       Margin="5,0"
                       FontWeight="Bold"/>
        </ToolBar>
        
        <!-- Main Content: TabControl with NLogViewers -->
        <TabControl x:Name="LogTabsControl" 
                    Grid.Row="1" 
                    ItemsSource="{Binding LogTabs}"
                    SelectedItem="{Binding SelectedTab}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Header}" />
                        <TextBlock Text=" (" 
                                   Margin="2,0,0,0"/>
                        <TextBlock Text="{Binding LogCount}" 
                                   FontWeight="Bold"/>
                        <TextBlock Text=")" />
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <dj:NLogViewer/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <!-- Language Selector (Left) -->
            <StatusBarItem HorizontalAlignment="Left">
                <Button x:Name="LanguageButton" 
                        Padding="5,2"
                        Cursor="Hand"
                        ToolTip="Change Language"
                        Click="LanguageButton_Click">
                    <Button.Content>
                        <Image Source="{Binding CurrentLanguageFlag, Converter={StaticResource SvgImageSourceConverter}}" 
                               Width="20" 
                               Height="15" 
                               Stretch="Uniform"/>
                    </Button.Content>
                </Button>
            </StatusBarItem>
            <Separator />
            <!-- Status Message (Center) -->
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
            <Separator />
            <!-- Timestamp (Right) -->
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding LastLogTimestamp}" />
            </StatusBarItem>
        </StatusBar>
        
        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
              Panel.ZIndex="1000">
            <Border Background="White" 
                    CornerRadius="10" 
                    Padding="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="300">
                <StackPanel>
                    <TextBlock Text="Loading File..." 
                               FontSize="18" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <ProgressBar IsIndeterminate="True" 
                                 Height="20" 
                                 Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding LoadingProgress}" 
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Foreground="Gray"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>


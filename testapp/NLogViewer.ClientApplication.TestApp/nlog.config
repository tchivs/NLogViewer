<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false">

  <extensions>
    <add assembly="NLog" />
  </extensions>

  <targets>
    <!-- ChainsawTarget for NLog 5 -->
    <target xsi:type="Chainsaw" 
            name="chainsaw" 
            address="udp://127.0.0.1:4000"
            includeCallSite="true"
            includeSourceInfo="true" />
    
    <!-- Log4JXmlTarget for NLog 6 -->
    <target xsi:type="Log4JXml" 
            name="log4jxml" 
            address="udp://127.0.0.1:4000"
            includeCallSite="true"
            includeSourceInfo="true" />
  </targets>

  <rules>
    <!-- Use chainsaw for NLog 5, log4jxml for NLog 6 -->
    <!-- This will be controlled via LaunchSettings -->
    <logger name="*" minlevel="Trace" writeTo="chainsaw" />
  </rules>
</nlog>

